---
import torch from "../images/blog/torch.gif"

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="flex items-center mb-32">
    <img src={torch} alt='torch'/>
    <div class="marquee w-96">
        <span class="text-4xl text-gruvboxTextColor">{title}</span>
    </div>
    <img src={torch} alt='torch' />
</div>

<style>
  .marquee {
  white-space: nowrap;
  overflow: hidden;
}
.marquee span {
  animation: animate 3s linear infinite;
  display: inline-block;
  padding-left: 100%;
}
@keyframes animate {
  100% {
    transform: translate(-100%, 0);
  }
}
</style>
