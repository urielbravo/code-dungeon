---
import MainLayout from "../layouts/MainLayout.astro"

import torch from "../images/blog/torch.gif"
---


<MainLayout title="The Blog">
    <div class="flex items-center">
        <img src={torch} alt='torch'/>
        <div class="marquee w-96">
            <span class="text-4xl text-gruvboxTextColor">The blog</span>
        </div>
        <img src={torch} alt='torch' />
  </div>
</MainLayout>

<style>
  .marquee {
  white-space: nowrap;
  overflow: hidden;
}
.marquee span {
  animation: animate 3s linear infinite;
  display: inline-block;
  padding-left: 100%;
}
@keyframes animate {
  100% {
    transform: translate(-100%, 0);
  }
}
</style>
