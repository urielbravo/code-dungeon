---
import MainLayout from "../layouts/MainLayout.astro"
import ProfileHeader from "../components/ProfileHeader.astro"
import ProfileTech from "../components/ProfileTech.astro"
import Card from "../components/Card.astro"

import medicalImg from "../images/profile/medical.png"

---


<MainLayout title="Professional Profile">
  <ProfileHeader />
  <h1 class="my-8 text-xl">Tech I've worked with professionaly:</h1>
  <ProfileTech />
  <h1 class="text-xl my-16">Some of my work:</h1>
  <Card 
    image={medicalImg} 
    altText="Medical Manager" 
    projectName="Medical Manager" 
    description="A patient manager for a dentist" 
    techUsed={["Django", "Bootstrap", "Postgresql"]}
    link="https://github.com/urielbravo/medical_records"
    linkType={"repo"}
    linkAltText="Repository to the medical records project"
    />
</MainLayout>
